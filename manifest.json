{
  "manifest_version": 2,
  "name": "Patreon Playlist",
  "version": "1.0.0",
  "description": "Collect and manage YouTube videos shared in Patreon messages",

  "permissions": [
    "storage",
    "https://www.patreon.com/messages/*",
    "https://www.youtube.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.patreon.com/messages/*"],
      "js": [
        "utils/youtube.js",
        "utils/storage.js",
        "content/detector.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_popup": "popup/playlist.html",
    "default_title": "Patreon Playlist",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
